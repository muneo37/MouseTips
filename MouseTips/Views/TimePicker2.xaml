<UserControl
    x:Class="MouseTips.Views.TimePicker2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MouseTips.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Storyboard x:Key="storyboardFadeIn">
            <DoubleAnimation
                Storyboard.TargetName="hourStack"
                Storyboard.TargetProperty="(Canvas.Top)"
                From="0"
                To="20"
                Duration="00:00:01" />
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Click="OnButtonClick" Content="スクロールして" />
        <Canvas Grid.Row="1" Background="White">
            <StackPanel x:Name="hourStack" Canvas.Top="0">
                <TextBlock Text="01" Height="20"/>
                <TextBlock Text="02" Height="20"/>
                <TextBlock Text="03" Height="20"/>
            </StackPanel>

        </Canvas>
    </Grid>
</UserControl>
